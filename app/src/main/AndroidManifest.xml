<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arsan_irianto.katalogfilm">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.example.arsan_irianto.katalogfilm.WRITE_DATABASE" android:protectionLevel="normal"/>
    <permission android:name="com.example.arsan_irianto.katalogfilm.READ_DATABASE" android:protectionLevel="normal"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailFilmActivity" />
        <provider
            android:authorities="com.example.arsan_irianto.katalogfilm"
            android:name=".provider.MovieProvider"
            android:exported="true"
            android:readPermission="com.example.arsan_irianto.katalogfilm.READ_DATABASE"
            android:writePermission="com.example.arsan_irianto.katalogfilm.WRITE_DATABASE" />
<!--        <activity android:name=".MainActivity"/>-->
<!--        <activity android:name=".NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>-->
    </application>

</manifest>